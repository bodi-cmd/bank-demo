        <form action="/reteta" method="POST" id="usrform">
            <input style="display: none;" name="id_postare" type="text" value="<%= id %>">
            <textarea id="" cols="30" rows="10" name="reteta"></textarea>
            <input type="submit" class="myButton" style="float:right;margin-right: 5%" value="Trimiteti">
        </form>
    </div>
    </div>
